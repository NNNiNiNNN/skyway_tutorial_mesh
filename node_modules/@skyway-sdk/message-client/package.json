{
  "name": "@skyway-sdk/message-client",
  "version": "0.2.0-beta.4",
  "description": "The official Next Generation JavaScript SDK for SkyWay",
  "homepage": "https://beta.skyway.ntt.com/",
  "license": "SEE LICENSE IN https://beta.skyway.ntt.com/terms.html",
  "author": "NTT Communications Corp.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "scripts": {
    "build": "cp -r ../../bundler ./ && zx ./bundler/private.mjs && rm -rf ./bundler",
    "compile": "rm -rf dist && tsc -p tsconfig.build.json",
    "publish:npm": "npm run build && npx can-npm-publish --verbose && npm publish --access public",
    "fix": "npm run format && npm run lint",
    "format": "prettier --write src __tests__",
    "graph": "dependency-cruiser --include-only '^src' --output-type dot src | dot -T svg > docs/dependencygraph.svg",
    "lint": "eslint --fix src __tests__",
    "test": "jest --silent",
    "test:console": "jest",
    "type": "tsc --noEmit -p ./tsconfig.json",
    "watch": "npm-run-all --parallel watch:tsc watch:esbuild",
    "watch:tsc": "tsc -p tsconfig.build.json -w",
    "watch:esbuild": "esbuild src/index.ts --bundle --watch --format=esm --target=es6 --outfile=dist/index.mjs"
  },
  "dependencies": {
    "isomorphic-fetch": "^3.0.0",
    "isomorphic-ws": "^4.0.1",
    "uuid": "^8.3.2",
    "ws": "^7.5.2"
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.3.0",
    "@types/uuid": "^8.3.1",
    "@types/ws": "^7.4.6",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "fastify": "^3.19.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.8"
  }
}
